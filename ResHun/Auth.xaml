        <Image Source="img/eer.JPG" Stretch="Fill" Margin="103,108,481,73"/>
        <Button Content="войти" HorizontalAlignment="Left" Height="26" Margin="160,300,0,0" VerticalAlignment="Top" Width="92" Foreground="White" Background="#FFE00001" BorderBrush="{x:Null}" Cursor="Hand" Click="login_Click" Style="{DynamicResource ButtonStyle1}"/>
        <TextBox x:Name="log" HorizontalAlignment="Left" Height="34" Margin="131,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151" Style="{DynamicResource TextBoxStyle1}"/>
