            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="179.876"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Margin="82,379,674,3" Source="img/Uber Eats (1).png" Stretch="Fill"/>
        <Image Margin="314,377,442,5" Source="img/Euro Money (1).png" Stretch="Fill"/>
        <Image Margin="546,375,202,-1" Source="img/In Transit (1).png" Stretch="Fill"/>
        <Image Margin="352,385,340,4" Source="img/12.JPG" Stretch="Fill"/>
        <Image Margin="118,385,540,5" Source="img/11.JPG" Stretch="Fill"/>
        <Image Margin="592,383,52,3" Source="img/13.JPG" Stretch="Fill"/>
        <Image Margin="432,0,104,294" Source="img/image 4.png" Stretch="Fill"/>
