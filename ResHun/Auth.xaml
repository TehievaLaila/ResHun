        <Label Content="логин" HorizontalAlignment="Left" Margin="131,160,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Book" Background="{x:Null}" Foreground="#FF474747"/>
        <Label Content="пароль" HorizontalAlignment="Left" Margin="131,225,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Book" Background="{x:Null}" Foreground="#FF474747"/>
        <Image Source="img/eer.JPG" Stretch="Fill" Margin="462,109,122,72"/>
        <Button Style="{DynamicResource ButtonStyle1}" Content="зарегестрироваться" HorizontalAlignment="Left" Height="26" Margin="514,301,0,0" VerticalAlignment="Top" Width="99" Foreground="White" Background="#FFE00001" BorderBrush="{x:Null}" Cursor="Hand" FontSize="10" Click="Reg_Click"/>
        <TextBox x:Name="login1" Style="{DynamicResource TextBoxStyle1}" HorizontalAlignment="Left" Height="23" Margin="490,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
        <TextBox x:Name="phone" Style="{DynamicResource TextBoxStyle1}" HorizontalAlignment="Left" Height="23" Margin="490,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
        <TextBox x:Name="name" Style="{DynamicResource TextBoxStyle1}" HorizontalAlignment="Left" Height="23" Margin="490,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
        <Label Content="логин" HorizontalAlignment="Left" Margin="490,209,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Book" Background="{x:Null}" Foreground="#FF474747"/>
        <Label Content="пароль" HorizontalAlignment="Left" Margin="490,244,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Book" Background="{x:Null}" Foreground="#FF474747"/>
        <Label Content="телефон" HorizontalAlignment="Left" Margin="490,172,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Book" Background="{x:Null}" Foreground="#FF474747"/>
        <Label Content="ФИО" HorizontalAlignment="Left" Margin="490,138,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Book" Background="{x:Null}" Foreground="#FF474747"/>
        <Image Margin="524,119,183,273" Source="img/ку.JPG" Stretch="Fill"/>
        <PasswordBox x:Name="Pass" HorizontalAlignment="Left" Height="29" Margin="131,247,0,0" VerticalAlignment="Top" Width="151" Style="{DynamicResource PasswordBoxStyle1}"/>
        <PasswordBox x:Name="password"  HorizontalAlignment="Left" Height="28" Margin="490,268,0,0" VerticalAlignment="Top" Width="151" Style="{DynamicResource PasswordBoxStyle1}"/>

    </Grid>
</Window>
